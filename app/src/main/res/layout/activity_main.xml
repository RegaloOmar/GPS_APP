<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:theme="@style/AppTheme"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Inicia nuestro ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorBoton"
                android:text="Usuario" />


            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorHint"
                android:text="TextView" />


            <TextView
                android:id="@+id/txtLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorBoton"
                android:text="Localidad" />

            <TextView
                android:id="@+id/txtCanal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorHint"
                android:text="TextView" />



            <Button
                android:id="@+id/btnSeleccionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBoton"
                android:text="Mostrar Datos"
                android:textColor="@color/colorTexto"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="409dp" />

            <Button
                android:id="@+id/btnFechas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBoton"
                android:text="Mostrar por Fecha"
                android:textColor="@color/colorTexto"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="409dp" />

            <Button
                android:id="@+id/btnTalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBoton"
                android:text="Mostrar por TalÃ³n"
                android:textColor="@color/colorTexto"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="409dp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>